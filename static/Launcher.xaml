		<local:MyButton Margin="0,4,0,8" Width="200" Height="35"
                    Text="快速截屏" EventType="打开文件" EventData="C:\Program Files\WindowsApps\Microsoft.ScreenSketch_11.2407.3.0_x64__8wekyb3d8bbwe\SnippingTool\SnippingTool.exe" />
